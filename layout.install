<?php

/**
 * @file
 * Installation and uninstallation routines for responsive layouts.
 */

/**
 * Implements hook_install().
 */
function layout_install() {
  $common_regions = array(
    'header_a' => 'Header A',
    'header_b' => 'Header B',
    'header_c' => 'Header C',
    'subheader_a' => 'Subheader A',
    'subheader_b' => 'Subheader B',
    'subheader_c' => 'Subheader C',
    'navigation' => 'Navigation',
    'title' => 'Title',
    'body' => 'Body',
    'sidebar_a' => 'Sidebar A',
    'sidebar_b' => 'Sidebar B',
    'sidebar_c' => 'Sidebar C',
    'footer_a' => 'Footer A',
    'footer_b' => 'Footer B',
    'footer_c' => 'Footer C',
  );
  $weight = 0;
  foreach ($common_regions as $name => $admin_title) {
    $region = (object) array(
      'name' => $name,
      'admin_title' => $admin_title,
      'weight' => $weight++,
      'custom' => 0,
    );
    layout_region_save($region);
  }
}

